# pede a string pro usuário
string = input("digite uma string:")
# peça ao usuário o separador
separador = input("digite o separador que deseja usar:")
#crie uma laço de repetição para mostrar quantas partes será dividido
for separador in range(len(separador)):
    # incremente o separador
    separador += 1
    # mostre quantas partes o separador é exibido
    print(separador,"partes") 
