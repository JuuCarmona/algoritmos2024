# Pergunte ao usuário a altura do retângulo
altura = int(input("Digite a altura do retângulo: "))

# Pergunte ao usuário a largura do retângulo
largura = int(input("Digite a largura do retângulo: "))

# Defina altura
for i in range(altura):
    if i == 0 or i == altura - 1:
        print("+" + "-" * (largura - 2) + "+")
#defina a largura
    else:
        print("|" + " " * (largura - 2) + "|")
