class Carro:
    def __init__(self,modelo,cor,ano):
        self.modelo = modelo
        self.cor = cor
        self.ano = ano

meu_carro = Carro(modelo ='fusca',cor = 'prata',ano = 1970)

class Restaurante:
    def __init__(self,nome,categoria,ativo=False,avaliacao=0,tempo_entrega=0):
        self.nome = nome
        self.categoria = categoria
        self.ativo = ativo
        self.avaliacao = avaliacao
        self.tempo_entrega = tempo_entrega

    def __str__(self):
        return f'{self.nome}|{self.categoria}'
    
restaurante_formatado = Restaurante(nome='Bom Sabor', categoria='tradicional')
print(restaurante_formatado)

class Cliente:
    def __init__(self,nome,contato,interesse,prazo):
        self.nome = nome
        self.contato = contato
        self.interesse = interesse
        self.prazo = prazo

cliente1 = Cliente(nome = 'phillips',contato=4198524445,interesse='comercial',prazo=30)
cliente2= Cliente(nome='apple',contato=18776253964,interesse='visual',prazo=58)
